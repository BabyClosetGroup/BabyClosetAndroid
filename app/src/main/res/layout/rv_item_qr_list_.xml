<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="28dp">
            <ImageView
                    android:layout_width="109dp"
                    android:layout_height="109dp"
                    app:srcCompat="@drawable/qr_list_img"
                    android:id="@+id/qr_list_img"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                <TextView
                        android:id="@+id/qr_list_txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[여아]"
                        android:textColor="#262626"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"/>
                <TextView
                        android:id="@+id/qr_list_txt_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중랑구"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                <Button
                        android:id="@+id/qr_list_btn_create"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/btn_yellow_fill_border"
                        android:text="QR생성하기"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="21dp"
                        android:layout_marginBottom="12dp"
                        android:paddingHorizontal="16dp"
                        style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#f1f1f1"
                android:layout_marginHorizontal="16dp"/>
    </LinearLayout>


</RelativeLayout>