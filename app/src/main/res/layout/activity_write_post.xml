<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.WritePostActivity"
        android:orientation="vertical"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/toolbar_write_post" />
    </LinearLayout>

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="none">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent" android:layout_height="219dp" android:layout_marginBottom="42dp">

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                    android:gravity="center" android:id="@+id/rl_picture_write_post">
                        <ImageView
                                android:layout_width="100dp" android:layout_height="100dp"
                                android:layout_marginRight="9dp"
                                android:layout_marginBottom="9dp"
                                android:background="#f1f1f1"
                                android:id="@+id/img_write_post1"
                                android:scaleType="centerCrop"
                        />
                        <ImageView
                                android:layout_width="100dp" android:layout_height="100dp"
                                android:layout_marginBottom="9dp"
                                android:layout_toRightOf="@id/img_write_post1"
                                android:background="#f1f1f1"
                                android:id="@+id/img_write_post2"
                                android:scaleType="centerCrop"
                        />
                        <ImageView
                                android:layout_width="100dp" android:layout_height="100dp"
                                android:layout_marginRight="9dp"
                                android:layout_below="@id/img_write_post1"
                                android:background="#f1f1f1"
                                android:id="@+id/img_write_post3"
                                android:scaleType="centerCrop"
                        />
                        <ImageView
                                android:layout_width="100dp" android:layout_height="100dp"
                                android:layout_below="@id/img_write_post2"
                                android:layout_toRightOf="@id/img_write_post3"
                                android:background="#f1f1f1"
                                android:id="@+id/img_write_post4"
                                android:scaleType="centerCrop"
                        />
                    </RelativeLayout>

                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                    >
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txt_category_write_post"
                                    android:text="카테고리 선택" android:textSize="16dp" android:textColor="#262626"/>
                            <Button
                                    android:layout_width="24dp" android:layout_height="24dp"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/btn_category_write_post"
                            />

                            <Button
                                    android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="10dp" android:layout_marginEnd="4dp"
                                    android:paddingLeft="15dp" android:paddingRight="15dp"
                                    android:layout_below="@id/btn_category_write_post" android:background="@drawable/cb_yellow_fill_border"
                                    android:text="자치구" android:textSize="14dp" android:textColor="#ffffff"
                                    android:clickable="false" android:id="@+id/txt_area_tag_write_post" android:visibility="gone"
                            />
                            <Button
                                    android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="10dp" android:layout_marginEnd="4dp"
                                    android:paddingLeft="15dp" android:paddingRight="15dp"
                                    android:layout_below="@id/btn_category_write_post" android:layout_toEndOf="@id/txt_area_tag_write_post" android:background="@drawable/cb_yellow_fill_border"
                                    android:text="개월수" android:textSize="14dp" android:textColor="#ffffff"
                                    android:clickable="false" android:id="@+id/txt_age_tag_write_post" android:visibility="gone"
                            />
                            <Button
                                    android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="10dp"
                                    android:paddingLeft="15dp" android:paddingRight="15dp"
                                    android:layout_below="@id/btn_category_write_post" android:layout_toEndOf="@id/txt_age_tag_write_post" android:background="@drawable/cb_yellow_fill_border"
                                    android:text="카테고리" android:textSize="14dp" android:textColor="#ffffff"
                                    android:clickable="false" android:id="@+id/txt_category_tag_write_post" android:visibility="gone"
                            />
                        </RelativeLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp"
                              android:layout_marginTop="15dp" android:background="#f1f1f1"/>
                        <RelativeLayout
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                        >

                            <TextView
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:text="마감기한 선택" android:textSize="16dp" android:textColor="#262626"
                                    android:id="@+id/txt_deadline_write_post"
                            />
                            <Button
                                    android:layout_width="24dp" android:layout_height="24dp"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/btn_deadline_write_post"
                            />
                            <Button
                                    android:layout_width="82dp" android:layout_height="28dp" android:layout_marginTop="10dp"
                                    android:layout_below="@id/txt_deadline_write_post" android:background="@drawable/cb_yellow_fill_border"
                                    android:text="1일" android:textSize="14dp" android:textColor="#ffffff"
                                    android:clickable="false"  android:visibility="gone" android:id="@+id/txt_deadline_tag"
                            />

                        </RelativeLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp"
                              android:layout_marginTop="15dp" android:background="#f1f1f1"/>


                        <EditText
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:background="@null" android:layout_marginTop="15dp"
                                android:hint="글 제목" android:textSize="16dp" android:textColor="#262626"
                                android:id="@+id/edt_title_write_post"
                        />
                        <View android:layout_width="match_parent" android:layout_height="1dp"
                              android:layout_marginTop="15dp" android:background="#f1f1f1"/>

                        <ScrollView android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                            <EditText
                                    android:layout_width="match_parent" android:layout_height="wrap_content"
                                    android:background="@null" android:layout_marginTop="15dp" android:gravity="top"
                                    android:hint="내용을 작성해주세요\n\n\n\n\n\n\n\n\n\n\n\n" android:textSize="16dp" android:textColor="#262626"
                                    android:id="@+id/edt_contents_wirte_post"
                            />
                        </ScrollView>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
        >

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#ffc107"
                    android:id="@+id/btn_share_write_post"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:text="나눔 등록하기"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
            />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>

