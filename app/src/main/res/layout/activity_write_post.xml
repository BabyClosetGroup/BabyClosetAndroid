<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.WritePostActivity"
        android:orientation="vertical"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 layout="@layout/toolbar_write_post" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="4">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <ImageView
                    android:layout_width="100dp" android:layout_height="100dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:background="#f1f1f1"
                    android:id="@+id/img_write_post1"
            />
            <ImageView
                    android:layout_width="100dp" android:layout_height="100dp"
                    android:layout_marginBottom="9dp"
                    android:layout_toRightOf="@id/img_write_post1"
                    android:background="#f1f1f1"
                    android:id="@+id/img_write_post2"
            />
            <ImageView
                    android:layout_width="100dp" android:layout_height="100dp"
                    android:layout_marginRight="9dp"
                    android:layout_below="@id/img_write_post1"
                    android:background="#f1f1f1"
                    android:id="@+id/img_write_post3"
            />
            <ImageView
                    android:layout_width="100dp" android:layout_height="100dp"
                    android:layout_below="@id/img_write_post2"
                    android:layout_toRightOf="@id/img_write_post3"
                    android:background="#f1f1f1"
                    android:id="@+id/img_write_post4"
            />
        </RelativeLayout>

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent" android:layout_height="0px"
            android:layout_weight="6" android:orientation="vertical"
           android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
    >
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="카테고리 선택" android:textSize="16dp" android:textColor="#262626"/>
            <Button
                    android:layout_width="24dp" android:layout_height="24dp"
                    android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:layout_marginTop="15dp" android:background="#f1f1f1"/>
        <RelativeLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
        >

        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="마감기한 선택" android:textSize="16dp" android:textColor="#262626"
                android:id="@+id/txt_deadline_write_post"
        />
        <Button
                android:layout_width="24dp" android:layout_height="24dp"
                android:layout_alignParentRight="true"
        />
            <ImageButton
                    android:layout_width="70dp" android:layout_height="29dp"
                    android:layout_below="@id/txt_deadline_write_post" android:background="@drawable/yellow_round_layout_border"
            />
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="1일" android:textSize="14dp" android:textColor="#ffc107"
                    android:layout_below="@id/txt_deadline_write_post"
            />
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:layout_marginTop="15dp" android:background="#f1f1f1"/>
    <EditText
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@null" android:layout_marginTop="15dp"
            android:hint="글 제목" android:textSize="16dp" android:textColor="#262626"
            android:id="@+id/edt_title_write_post"
    />
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:layout_marginTop="15dp" android:background="#f1f1f1"/>

        <EditText
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@null" android:layout_marginTop="15dp"
                android:hint="내용을 작성해주세요" android:textSize="16dp" android:textColor="#262626"
                android:id="@+id/edt_contents_wirte_post"
        />
    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffc107"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="나눔 등록하기"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:id="@+id/btn_share_write_post"
        />

    </RelativeLayout>


</LinearLayout>