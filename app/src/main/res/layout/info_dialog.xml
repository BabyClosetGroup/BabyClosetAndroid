<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@drawable/round_border">

    <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_dlg_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="14dp"
                app:srcCompat="@drawable/user"
        />
        <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:fontFamily="@font/seoulnamsanb"
                        android:text="Unknown"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_dlg_name"/>
                <TextView
                        android:fontFamily="@font/seoulnamsanl"
                        android:text="의 별점 "
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:fontFamily="@font/seoulnamsanb"
                        android:text="0점"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_dlg_rate"/>
            </LinearLayout>
            <RatingBar
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:id="@+id/rating_dlg"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>