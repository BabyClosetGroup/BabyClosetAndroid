<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.babycloset.UI.Fragment.SwipeLockableViewPager
                        android:id="@+id/vp_ac_main_frag_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tl_ac_main_bottomTab">
                </com.example.babycloset.UI.Fragment.SwipeLockableViewPager>
        </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/toolbar_bg_shadow"
            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/tl_ac_main_bottomTab"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:tabMode="fixed"
            android:stateListAnimator="@null"
            android:background="@android:color/transparent"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabBackground="@android:color/transparent"
            android:layout_alignParentBottom="true">
    </android.support.design.widget.TabLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/write_btn"
            android:id="@+id/btn_write_create"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"/>
</RelativeLayout>