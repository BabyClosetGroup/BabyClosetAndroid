<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context=".UI.Fragment.HomeFragment"
        android:background="#f1f1f1">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include
                android:id="@+id/toolbar_main"
                layout="@layout/toobar_main"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
            <EditText
                    android:id="@+id/edit_searh_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="어떤 옷을 찾으시나요?"
                    android:background="@drawable/search_background"
                    android:textSize="16sp"
                    android:textColor="#b9b9b9"
                    android:inputType="text"
                    android:fontFamily="@font/seoulnamsanm"
                    android:paddingLeft="33dp"
                    android:paddingVertical="12dp"
                    android:layout_marginHorizontal="16dp"/>
            <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_img"
                    android:layout_marginLeft="24dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingHorizontal="16dp"
                android:background="#ffffff">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:text="마감임박"
                        android:fontFamily="@font/seoulnamsanm"
                        android:textColor="#262626"
                        android:textSize="16sp"/>
                <LinearLayout
                        android:id="@+id/view_home_go_deadline_all_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="-5dp"
                            android:text="더보기"
                            android:fontFamily="@font/seoulnamsanm"
                            android:textColor="#767676"
                            android:textSize="13sp"
                            android:layout_gravity="center"/>
                    <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/home_btn_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_item_deadline_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:paddingTop="20dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="15dp"
                android:background="#ffffff">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최신상품"
                        android:fontFamily="@font/seoulnamsanm"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:layout_weight="4"/>
                <LinearLayout
                        android:id="@+id/view_home_go_recent_all_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="-5dp"
                            android:text="모든상품 보기"
                            android:fontFamily="@font/seoulnamsanm"
                            android:textColor="#767676"
                            android:textSize="13sp"
                            android:layout_gravity="center"/>
                    <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/home_btn_arrow"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_item_recent_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</FrameLayout>