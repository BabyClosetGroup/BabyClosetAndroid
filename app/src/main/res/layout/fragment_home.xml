<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context=".UI.Fragment.HomeFragment"
        android:background="#f1f1f1">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include
                android:id="@+id/toolbar_main"
                layout="@layout/toobar_main"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingHorizontal="16dp"
                android:paddingRight="10dp"
                android:background="#ffffff">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마감임박"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:layout_weight="4"/>
                <TextView
                        android:id="@+id/txt_home_go_deadline_all_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기 >"
                        android:textColor="#767676"
                        android:textSize="13sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_item_deadline_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:paddingTop="20dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="15dp"
                android:background="#ffffff">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최신상품"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:layout_weight="4"/>
                <TextView
                        android:id="@+id/txt_home_go_recent_all_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모든 상품 보기 >"
                        android:textColor="#767676"
                        android:textSize="13sp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_item_recent_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</FrameLayout>