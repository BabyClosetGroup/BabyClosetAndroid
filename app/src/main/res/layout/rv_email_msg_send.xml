<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:background="@drawable/email_msg_send_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_txt_email_msg_what"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보낸 쪽지"
            android:textSize="12sp"
            android:textColor="#767676"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="20sp"
            android:fontFamily="@font/seoulnamsanb"
        />

        <TextView
            android:id="@+id/rv_txt_email_msg_time"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#dbdbdb"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="20sp"
            android:gravity="end"
            android:text="19/01/12 15:51"
            android:fontFamily="@font/seoulnamsanm"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/rv_txt_email_msg_contents"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#262626"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="17sp"
        android:text="축하합니다. 여아 투피스 나눔자로 선정 되셨어요! "
        android:fontFamily="@font/seoulnamsanm"
    />

</LinearLayout>
