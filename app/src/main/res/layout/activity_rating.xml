<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="#ffffff"
    tools:context=".UI.Activity.RatingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:id="@+id/btn_close"/>
        <LinearLayout
            android:layout_marginLeft="27dp"
            android:layout_marginTop="84dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_share_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="UNKNOWN님" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="과의" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="27dp"
            android:id="@+id/txt_share_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="상품명" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="27dp"
            android:text="나눔은 어떠셨나요?" />

        <RatingBar
                android:id="@+id/ratingStar"
                android:layout_marginTop="48.9dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
        />
        <!--android:progressDrawable="@drawable/custom_rating_selector"-->

        <RelativeLayout
                android:layout_marginTop="88.7dp"
                android:layout_marginHorizontal="16dp"
                android:layout_height="42dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="22dp">
            <ImageView
                    android:background="@drawable/yellow_fill_border"
                    android:layout_height="42dp"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_rating"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_height="42dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="별점주기"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>