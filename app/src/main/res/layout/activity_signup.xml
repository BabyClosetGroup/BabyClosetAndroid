<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.SignupActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="104dp"
                    android:text="아기옷장에게 회원님의"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="#262626"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:layout_marginLeft="27dp"
                    android:text="정보를 알려주세요."
                    android:textSize="22sp"
                    android:textColor="#262626"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="31dp"
                    android:text="아기옷장 회원이 되어 함께 옷장을 채워나가요!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:text="이름"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="54dp"
                    android:layout_marginLeft="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:fontFamily="@font/seoulnamsanl"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="11dp"
                    android:background="@drawable/signin_enter_border"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:hint="한글 혹은 영문으로 써주세요."
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edt_name_siginin"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:text="아이디"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:fontFamily="@font/seoulnamsanl"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="11dp"
                    android:background="@drawable/signin_enter_border"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="textPersonName"
                    android:hint="영문 대 ·소문자, 숫자로만 기입 해 주세요."
                    android:textSize="12sp"
                    android:ems="10"
                    android:id="@+id/edt_id_siginin"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="37dp"
                    android:text="비밀번호"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:fontFamily="@font/seoulnamsanl"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="11dp"
                    android:background="@drawable/signin_enter_border"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="textPassword"
                    android:textSize="12sp"
                    android:hint="영어와 숫자를 이용하여 6자 이상 가능해요. "
                    android:ems="10"
                    android:id="@+id/edt_pw_siginin"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="37dp"
                    android:text="비밀번호 확인"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:fontFamily="@font/seoulnamsanl"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="11dp"
                    android:background="@drawable/signin_enter_border"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:inputType="textPassword"
                    android:textSize="12sp"
                    android:hint="위의 비밀번호를 다시한번 더 입력 해 주세요."
                    android:ems="10"
                    android:id="@+id/edt_pwck_siginin"/>
            <TextView
                    android:fontFamily="@font/seoulnamsanm"
                    android:text="닉네임"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:fontFamily="@font/seoulnamsanl"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="11dp"
                    android:background="@drawable/signin_enter_border"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:hint="한글로 8글자 이내로 써주세요."
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edt_nickname_signin"/>
             <View
                     android:layout_width="match_parent"
                     android:layout_height="143dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
            android:fontFamily="@font/seoulnamsanb"
            android:layout_alignParentBottom="true"
            android:background="#ffc107"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="20sp"
            android:text="회원가입 완료 하기"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btn_signin"/>
</RelativeLayout>