<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.Signin2Activity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_marginLeft="27dp"
                android:layout_marginTop="143dp"
                android:text="아기옷장에서 어떻게"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#262626"/>
        <TextView
                android:layout_marginLeft="27dp"
                android:textSize="22sp"
                android:textColor="#262626"
                android:text="불리고 싶으세요?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="12sp"
                android:textColor="#262626"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="31dp"
                android:text="아기옷장 회원이 되어 함께 옷장을 채워나가요!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="닉네임"
                android:textSize="12sp"
                android:textColor="#262626"
                android:layout_marginTop="122dp"
                android:layout_marginLeft="37dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <EditText
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="11dp"
                android:background="@drawable/signin_enter_border"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:hint="한글로 8글자 이내로 써주세요."
                android:textSize="12sp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edt_nickname_signin"/>
    </LinearLayout>

    <Button
            android:layout_alignParentBottom="true"
            android:background="#ffc107"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="20sp"
            android:text="회원가입 완료 하기"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/btn_signin"/>
</RelativeLayout>