<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#ffffff"
              android:id="@+id/ll_rv_item_complete_overview_container">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:paddingLeft="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_rv_item_complete_overview_thumbnail"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:src="@drawable/product_picture" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rv_item_complete_overview_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="상품명"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rv_item_complete_overview_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동대문구"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_rv_item_complete_overview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="날짜"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rv_item_complete_overview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="unknown"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님과의 나눔"
                    android:textSize="14dp" />

                <ImageView
                        android:layout_marginLeft="8dp"
                        android:layout_width="69dp"
                        android:layout_height="18dp"
                        android:src="@drawable/userinfo_btn"
                        android:id="@+id/btn_rv_item_complete_overview_info"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별점 : "
                    android:textColor="#555555"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txt_rv_item_complete_overview_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFC107"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
            android:layout_marginHorizontal="16dp"
            android:layout_height="42dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="22dp"
            android:id="@+id/btn_rv_item_complete_overview_rate">
        <ImageView
                android:background="@drawable/yellow_fill_border"
                android:layout_height="42dp"
                android:layout_width="match_parent"
                android:layout_weight="1"/>
        <TextView
                android:layout_height="42dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="별점주기"/>

    </RelativeLayout>
</LinearLayout>