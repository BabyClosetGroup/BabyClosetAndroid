<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.QRMainActivity"
        android:background="#ffffff">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include
            layout="@layout/toolbar_qr_main"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="54dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나눔을 주는 "
                    android:textColor="#262626"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날 인가요?"
                    android:textColor="#262626"
                    android:textSize="22sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혹은 "
                    android:textColor="#262626"
                    android:textSize="22sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나눔을 받는 "
                    android:textColor="#262626"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날 인가요?"
                    android:textColor="#262626"
                    android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_qr_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="28dp">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나눔 주기-QR 생성하기"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/btn_yellow_fill_border"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_qr_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="35dp">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나눔 받기-코드 스캔하기"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/btn_yellow_fill_border"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>