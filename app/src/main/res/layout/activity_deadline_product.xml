<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.DeadLineProductActivity"
        android:orientation="vertical"
>
    <include layout="@layout/toolbar_all_product" />
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:layout_marginStart="16dp"
            android:id="@+id/rv_filter_deadline_product" android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

        <RelativeLayout
                android:id="@+id/rl_not_filter_post_deadline_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
        >
            <ImageView
                    android:layout_width="140dp" android:layout_height="139dp"
                    android:background="@drawable/filter_not_post_img" android:id="@+id/img_filter_deadline"
                    android:layout_centerInParent="true" android:layout_marginTop="140dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#2f2f2f"
                    android:text="상품이 존재하지 않아요!"
                    android:fontFamily="@font/seoulnamsanm"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/img_filter_deadline"
                    android:layout_centerHorizontal="true"
            />
        </RelativeLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollbars="none">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"
                    android:id="@+id/rv_item_deadline_product" android:layout_centerHorizontal="true" android:layout_marginTop="15dp"/>
            <Button
                    android:id="@+id/btn_more_deadline_product" style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="@font/seoulnamsanm"
                    android:layout_width="match_parent" android:layout_height="42dp"
                    android:text="상품 더보기" android:textSize="17sp" android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp" android:layout_marginBottom="20dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    android:layout_below="@id/rv_item_deadline_product"
                    android:background="@drawable/cb_yellow_fill_border"/>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>