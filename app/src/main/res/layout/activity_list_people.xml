<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.ListPeopleActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/toolbar_list_people" android:id="@+id/toolbar_list_people"/>
        <View android:layout_width="match_parent" android:layout_height="3dp"
              android:background="@drawable/tab_shadow"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:paddingLeft="16dp"
                android:gravity="center">

            <ImageView
                    android:id="@+id/img_thumbnail"
                    android:layout_width="109dp"
                    android:layout_height="109dp"
                    android:background="@drawable/product" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/txt_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="상품명"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/txt_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동대문구"
                            android:textSize="12dp" />

                    <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="날짜"
                            android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나눔요청 인원 : "
                            android:textColor="#555555"
                            android:textSize="14dp" />

                    <TextView
                            android:id="@+id/txt_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0명"
                            android:textColor="#FFC107"
                            android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="6dp"
              android:background="#f1f1f1"/>

        <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신청한 사람 " />
            <TextView
                    android:id="@+id/txt_application_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/rv_application_people_overview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <Button
            android:layout_alignParentBottom="true"
            android:background="#ffc107"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="20sp"
            android:text="선택 후 쪽지 보내기"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/btn_send_note"/>
</RelativeLayout>