<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.Activity.EmailMsgActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_email_msg"/>
        <View android:layout_width="match_parent" android:layout_height="3dp"
            android:background="@drawable/tab_shadow"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="77dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_email_msg"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_text_email_msg_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image"
                    android:layout_marginBottom="59.7dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_email_msg_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="21sp"
                        android:textColor="#2f2f2f"
                        android:textSize="17sp"
                        android:text="상대방1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="21sp"
                        android:textColor="#2f2f2f"
                        android:textSize="17sp"
                        android:text="님께"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="21sp"
                    android:textColor="#2f2f2f"
                    android:textSize="17sp"
                    android:text="메시지를 남겨봐요!"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/signin_enter_border"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_email_msg_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="13dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="메세지를 입력해 주세요."
            android:inputType="textPersonName"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="26sp"
            android:textColor="#767676"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/btn_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:src="@drawable/setting_btn" />

    </LinearLayout>


</RelativeLayout>










