<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".UI.Activity.InfoConsentActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_marginLeft="27dp"
                android:layout_marginTop="143dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:text="서비스 이용을 위해" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginLeft="27dp"
                    android:id="@+id/txt_share_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="필수항목 동의"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:text="가 필요해요."/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/info_consent_border"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/btn_agree_all_info"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/info_consent_top_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_marginLeft="32dp"
                        android:textSize="16sp"
                        android:textColor="#262626"
                        android:gravity="center_vertical"
                        android:text="전체확인, 동의 합니다."
                        android:layout_width="wrap_content"
                        android:layout_height="53dp"
                        android:id="@+id/textView2"
                        android:layout_weight="1"
                />
                <ImageView
                        android:id="@+id/btn_agree_all_select"
                        android:layout_marginRight="32dp"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/agree_selector"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/btn_agree1_info"
                    android:layout_marginTop="53dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="14sp"
                        android:textColor="#262626"
                        android:layout_marginLeft="32dp"
                        android:gravity="center_vertical"
                        android:text="서비스 이용약관 동의(필수)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <ImageView
                        android:id="@+id/btn_agree1_select"
                        android:layout_marginRight="32dp"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/agree_selector"
                />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/btn_agree2_info"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="14sp"
                        android:textColor="#262626"
                        android:layout_marginLeft="32dp"
                        android:gravity="center_vertical"
                        android:text="개인정보 수집 동의 (필수)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <ImageView
                        android:id="@+id/btn_agree2_select"
                        android:layout_marginRight="32dp"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/agree_selector"
                />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
                android:layout_marginTop="31dp"
                android:layout_marginHorizontal="16dp"
                android:layout_height="42dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="22dp">
            <ImageView
                    android:background="@drawable/yellow_fill_border"
                    android:layout_height="42dp"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_agree_info"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_height="42dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="동의하고 시작"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>