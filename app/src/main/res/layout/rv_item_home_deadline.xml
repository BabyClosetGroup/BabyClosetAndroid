<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_home_deadline_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="15dp">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="105dp"
                android:layout_height="105dp">
            <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img_camera"
                    android:id="@+id/img_home_deadline"/>
            <TextView
                    android:id="@+id/txt_home_deadline_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D-0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:fontFamily="@font/seoulnamsanm"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/deadline_border"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:paddingVertical="9dp"
                    android:paddingHorizontal="7dp"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/txt_home_deadline_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로딩중"
                android:textColor="#262626"
                android:textSize="16sp"
                android:fontFamily="@font/seoulnamsanm"
                android:layout_marginTop="10dp"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView
                    android:id="@+id/txt_home_deadline_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로딩중"
                    android:textColor="#767676"
                    android:textSize="12sp"
                    android:fontFamily="@font/seoulnamsanm"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="외 "
                    android:textColor="#767676"
                    android:textSize="12sp"
                    android:fontFamily="@font/seoulnamsanl"
                    android:layout_marginLeft="2dp"/>
            <TextView
                    android:id="@+id/txt_home_deadline_area_etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#767676"
                    android:textSize="12sp"
                    android:fontFamily="@font/seoulnamsanl"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구"
                    android:textColor="#767676"
                    android:textSize="12sp"
                    android:fontFamily="@font/seoulnamsanl"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>