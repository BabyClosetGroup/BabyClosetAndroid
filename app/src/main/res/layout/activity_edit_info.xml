<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="#ffffff"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.EditInfoActivity"
        android:orientation="vertical">
    <include layout="@layout/toolbar_edit_info" android:id="@+id/toolbar_edit_info"/>
    <View android:layout_width="match_parent" android:layout_height="3dp"
          android:background="@drawable/tab_shadow"/>
    <ImageView
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/user"
            android:id="@+id/img_info_thumbnail"
            android:layout_marginTop="26dp"/>
    <RelativeLayout
            android:layout_marginHorizontal="16dp"
            android:layout_height="42dp"
            android:layout_width="wrap_content">
        <ImageView
                android:background="@drawable/info_name_border"
                android:layout_height="42dp"
                android:layout_width="match_parent"
                android:layout_weight="1"/>
        <EditText
                android:fontFamily="@font/seoulnamsanb"
                android:hint="한글로 8글자 이내로 써주세요."
                android:background="@null"
                android:layout_height="42dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#262626"
                android:text="unknown"
                android:id="@+id/txt_info_nickname"/>

    </RelativeLayout>

    <TextView
            android:fontFamily="@font/seoulnamsanm"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="26dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#767676"
            android:text="프로필 사진과 닉네임을 변경해 보세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View android:layout_width="match_parent" android:layout_height="6dp"
    android:background="#f1f1f1"/>
    <TextView
            android:fontFamily="@font/seoulnamsanm"
            android:textSize="16sp"
            android:textColor="#262626"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:text="계정정보"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/seoulnamsanm"
                android:text="이름"
                android:textSize="16sp"
                android:textColor="#262626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:fontFamily="@font/seoulnamsanm"
                android:background="@null"
                android:layout_marginLeft="51dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="UNKNOWN"
                android:textSize="16sp"
                android:textColor="#262626"
                android:id="@+id/txt_info_name"
                android:layout_weight="1"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="16dp"
            android:background="#CFCFCF"
            android:layout_marginBottom="37dp"/>
    <LinearLayout
            android:layout_marginBottom="9dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/seoulnamsanm"
                android:text="아이디"
                android:textSize="16sp"
                android:textColor="#262626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <TextView
                android:fontFamily="@font/seoulnamsanm"
                android:background="@null"
                android:layout_marginLeft="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="UNKNOWN"
                android:textSize="16sp"
                android:textColor="#262626"
                android:id="@+id/txt_info_id" android:layout_weight="1"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="16dp"
            android:background="#CFCFCF"
            android:layout_marginBottom="37dp"/>
    <LinearLayout
            android:layout_marginBottom="9dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/seoulnamsanm"
                android:text="비밀번호"
                android:textSize="16sp"
                android:textColor="#262626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/fake_false">
                <EditText
                        android:fontFamily="@font/seoulnamsanm"
                        android:enabled="false"
                        android:background="@null"
                        android:layout_marginLeft="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text="0000000"
                        android:textSize="12sp"
                        android:textColor="#262626" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/fake_true">
                <EditText
                        android:fontFamily="@font/seoulnamsanm"
                        android:enabled="false"
                        android:background="@null"
                        android:layout_marginLeft="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="영어와 숫자를 이용하여 6자 이상 가능해요. "
                        android:textSize="12sp"
                        android:textColor="#262626"
                        android:id="@+id/txt_info_pw" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/chage_btn"
                    android:id="@+id/btn_pw_del"/>
        </FrameLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="16dp"
            android:background="#CFCFCF"
            android:layout_marginBottom="26dp"/>

    <View android:layout_width="match_parent" android:layout_height="6dp"
          android:background="#f1f1f1"/>
    <TextView
            android:fontFamily="@font/seoulnamsanm"
            android:textSize="16sp"
            android:textColor="#262626"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:text="계정정보"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <LinearLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

        <TextView
                android:fontFamily="@font/seoulnamsanm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:paddingLeft="16dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="로그아웃" />

        <ImageView
                android:layout_marginRight="15.9dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_more" />
    </LinearLayout>

</LinearLayout>