<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.LoginActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_marginLeft="27dp"
                android:layout_marginTop="104dp"
                android:text="로그인하여"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#262626"/>
        <TextView
                android:layout_marginLeft="27dp"
                android:text="아기옷장을 열어봐요!"
                android:textSize="22sp"
                android:textColor="#262626"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="ID는 무엇인가요?"
                android:textSize="12sp"
                android:textColor="#262626"
                android:layout_marginTop="86dp"
                android:layout_marginLeft="37dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <EditText
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="11dp"
                android:background="@drawable/signin_enter_border"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textSize="12sp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edt_id_login"/>
        <TextView
                android:text="비밀번호는 무엇인가요?"
                android:textSize="12sp"
                android:textColor="#262626"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="37dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <EditText
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="11dp"
                android:background="@drawable/signin_enter_border"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:inputType="textPersonName"
                android:textSize="12sp"
                android:ems="10"
                android:id="@+id/edt_pw_login"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="앗! 아직 ID가 없으시다구요?"
                    android:textSize="12sp"
                    android:textColor="#262626"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="37dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="회원가입"
                    android:textSize="12sp"
                    android:textColor="#ffc107"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_to_signin"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:layout_alignParentBottom="true"
            android:background="#ffc107"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="20sp"
            android:text="로그인 하기"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/btn_login"/>
</RelativeLayout>